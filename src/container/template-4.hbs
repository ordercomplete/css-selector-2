<div>
  {{>header}}
</div>

{{#with main}}
<div class="hero">

  <img src="{{image}}" alt="Hero image" class="hero_image">

  <div class="hero_content">
    <h1 class="hero_title">{{heading}}</h1>
    <p class="hero_text">{{description}}</p>
    <div class="form_action">
      <a class="button hero_button" href="{{href}}">{{button}}</a>
    </div>
  </div>

</div>
{{/with}}

<main class="blog">
  {{#each featured}}
  {{>cardFeatured data=this}}
  {{/each}}
</main>


<div class="form">
  {{#each actions}}
  <div class="form_content">
    <h3 class="form_title">{{heading}}</h3>
    <div class="form_action">
    <a class="button form_button" href="{{url}}">{{text}}</a>
  </div>
  </div>
  
  {{/each}}
</div>



<div>
  {{>footer}}
</div>