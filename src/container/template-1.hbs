<div class="page">
  <div class="page_content">
    <div class="page_block">
      <header class="header row g-0">
        <div class="col-3">
          {{>logo}}
        </div>
        <nav class="header_nav col-9">
          <div class="header_nav_right">

            {{!-- {{>navtemplate1 list=header isVertical=true}} --}}

            {{>navtemplate1 list=header}}

          </div>
        </nav>
      </header>
      <div class="divider"></div>
    </div>

    <div class="page_block">
      {{>hero title=hero.title text=hero.text}}
    </div>

    <div class="page_block">
      <main class="row g-0 plans">
        {{#each plans}}
        <div class="col plans_card">
          {{>card data=this}}
        </div>
        {{/each}}

      </main>
    </div>

    <div class="page_block">
      <div class="divider"></div>
      <footer class="row footer">
        <div class="col-3">
          {{>logo}}
          <span class="footer_copyright">Copyright 2023-2024</span>
        </div>
        {{#each footer}}
        <div class="col-3">
          <span class="footer_title">{{title}}</span>
          <span class="footer_links">{{>navtemplate1 list=links isVertical=true}}</span>
        </div>
        {{/each}}


      </footer>
    </div>

  </div>